<div class="col-md-5">
  <%= form_for(@event) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :date %>
        <%= f.date_select :date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Create new event", class:"btn btn-default" %>
      </div>
  <% end %>
</div>