<h1>Feedback Form</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @feedback, :url =>event_talk_feedbacks_path do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="form-group">
          <%= f.label "Talk title" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :comments %>
          <%= f.text_field :comments, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :rating %>
          <%= f.select :rating, options_for_select(1..5), { prompt: "Choose rating" }, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create new event", class: "btn btn-default" %>
        </div>
    <% end %>
  </div>
</div>